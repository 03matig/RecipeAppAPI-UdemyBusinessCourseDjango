# Default flake8 configuration file.

[flake8]

# Flake 8 will exclude these files from linting.
#   Migration is auto-generated by Django, and so is manage.py.
#   pycache is a cache file auto-generated by Python
#   settings.py is a preset file and we don't want to change them all (also auto-generated by Django).
exclude =
    migrations,
    __pycache__,
    manage.py,
    settings.py

# E265: Inline comments wrongfully formatted
# E266: Excessive amount of hashtag comments on a block of code.
ignore = E265,E266

# We raise the max length per line of code to allow long comments.
max-line-length = 140

# Optional: if any file needs to be totally ignored.
# per-file-ignores =
#     core/management/commands/wait_for_db.py: E501